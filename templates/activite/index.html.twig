{% extends 'base.html.twig' %}

{% block title %}Activite index{% endblock %}

{% block body %}
    <h1>Activite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_activite</th>
                <th>DescreptionActivite</th>
                <th>PrixActivite</th>
                <th>Centre </th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.idActivite }}</td>
                <td>{{ activite.DescreptionActivite }}</td>
                <td>{{ activite.PrixActivite }}</td>
                <td>{{ activite.Centre.nomCentre }}</td>

                <td>
                    <a href="{{ path('activite_show', {'id_activite': activite.idActivite}) }}">show</a>
                    <a href="{{ path('activite_edit', {'id_activite': activite.idActivite}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('activite_new') }}">Create new</a>
{% endblock %}
