{% extends 'base.html.twig' %}

{% block title %}Centre index{% endblock %}

{% block body %}
    <h1>Centre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_centre</th>
                <th>Owner</th>
                <th>Adresse</th>
                <th>Description_centre</th>
                <th>Prix_centre</th>
                <th>Photo_centre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for centre in centres %}
            <tr>
                <td>{{ centre.id }}</td>
                <td>{{ centre.nomCentre }}</td>
                <td>{{ centre.owner }}</td>
                <td>{{ centre.adresse }}</td>
                <td>{{ centre.descriptionCentre }}</td>
                <td>{{ centre.prixCentre }}</td>
                <td>{{ centre.photoCentre }}</td>
                <td>
                    <a href="{{ path('centre_show', {'id': centre.id}) }}">show</a>
                    <a href="{{ path('centre_edit', {'id': centre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('centre_new') }}">Create new</a>
{% endblock %}
