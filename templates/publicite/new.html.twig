{% extends 'layout.html.twig' %}


{% block body %}
    <h1>Créer Publicité </h1>

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <ol class="breadcrumb">

                <li class="breadcrumb-item active"><a href="{{ path('publicite_index') }}">Publicite</a></li>
                <li class="breadcrumb-item active"><a href="{{ path('publicite_new') }}">Ajouter</a></li>
            </ol>
        </div>

    </div>
    <div class="row">

        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ajoutez Votre Publicité</h4>
                    <form method="post"  enctype="multipart/form-data">
                        {{ form_start(form) }}

                        <div class="form-group ">
                            <label for="adr"  class="control-label">Titre de la publicité</label>
                            <input class="form-control" type="text" name="titre_pub" minlength="4" maxlength="50" required>
                        </div>
                        <div class="form-group ">
                            <label for="desc"  class="control-label">Description de la publicité</label>
                            <textarea class="form-control"   rows="4" name="description_pub" minlength="4" maxlength="300" required ></textarea>
                        </div>

                        <div class="form-group ">

                            <label for="ph" class="control-label">Image de la publicité</label>
                            <input type="file" id="ph" class="dropify" data-show-remove="false" name="image_pub" accept="image/x-png,image/gif,image/jpeg" required/>

                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i>Ajouter</button>
                            <a type="button" class="btn btn-secondary" href="{{ path('publicite_index') }}">Annuler</a>
                        </div>
                        {{ form_end (form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <ol class="breadcrumb">

                <button class="breadcrumb-item active"><a href="{{ path('publicite_index') }}">Retour à la liste</a></button>

            </ol>
        </div>
    </div>

{% endblock %}
