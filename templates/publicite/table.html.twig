

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: center;
            padding: 8px;
        }
        mid {
            text-align: center;
            padding: 15px;

        }

        tr:nth-child(even){background-color: #f2f2f2}

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>
<body>
<h1> Liste Publicité</h1>
<table class="table product-overview" id="myTable">
    <thead>
    <tr>
        <th>Id</th>
        <th>Titre_pub</th>
        <th>Description_pub</th>


    </tr>
    </thead>
    <tbody>
    {% for publicite in publicites %}
        <tr>
            <td>{{ publicite.id }}</td>
            <td>{{ publicite.titrePub }}</td>
            <td>{{ publicite.descriptionPub }}</td>


        </tr>
    {% else %}
        <tr>
            <td colspan="5">Pas de publicité !</td>
        </tr>
    {% endfor %}

    </tbody>
</table>


</body>
</html>

